<title>Liste des Événements</title>
</head>

<body class="bg-light">
  <div class="container mt-5">
    <h1 class="text-center mb-4">Liste des Événements</h1>
    <div class="row">
      <% @events.each do |event| %>
        <div class="col-md-4 mb-4">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title"><%= event.title %></h5>
              <p class="card-text"><%= event.description %></p>
              <p class="card-text"><strong>Date :</strong> <%= event.start_date.strftime('%d/%m/%Y') %></p>
              <p class="card-text"><strong>Prix :</strong> <%= event.price %> €</p>
              <a href="<%= event_path(event) %>" class="btn btn-primary">Détails</a>
              <%= link_to "Voir les détails", event_path(@event) %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</body>
</html>
