<div class="row card-event-parents">
<% @events.each do |event| %>
  <div class="col-md-4 ">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title"><%= event.title %></h5>
        <p class="card-text"><strong>Date :</strong> <%= event.start_date.strftime("%d/%m/%Y") %></p>
        <p class="card-text"><strong>Prix :</strong> <%= event.price %> €</p>
        <a href="<%= event_path(event) %>" class="btn btn-primary">Détails</a>
      </div>
    </div>
  </div>
<% end %>
</div>