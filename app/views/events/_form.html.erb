<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h1 class="card-title text-center mb-4">Créer un Événement</h1>

          <%= form_with(model: @event, local: true, html: { class: "form" }) do |form| %>
            <div class="mb-3">
              <%= form.label :start_date, class: "form-label" %>
              <%= form.datetime_field :start_date, class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= form.label :duration, class: "form-label" %>
              <%= form.number_field :duration, class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= form.label :title, class: "form-label" %>
              <%= form.text_field :title, class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= form.label :description, class: "form-label" %>
              <%= form.text_area :description, class: "form-control", rows: 4 %>
            </div>

            <div class="mb-3">
              <%= form.label :price, class: "form-label" %>
              <%= form.number_field :price, class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= form.label :location, class: "form-label" %>
              <%= form.text_field :location, class: "form-control" %>
            </div>

            <div class="d-grid">
              <%= form.submit "Créer l'Événement", class: "btn btn-primary btn-block" %>
            </div>
            
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>