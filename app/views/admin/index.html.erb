<br><br>
<div class="container">
  <h1 class="text-center mt-4">Admin Page</h1>

  <div class="row mt-4">
    <% @users.each do |user| %>
      <div class="col-md-4 mb-4">
        <div class="card">
          <img src="<%= asset_path('admin.jpg') %>" class="card-img-top" alt="User Image">
          <div class="card-body">
            <%= form_for(user, url: admin_user_path(user), remote: true, method: :patch) do |f| %>
              <div class="mb-3">
                <%= f.label :email, class: "form-label" %>
                <%= f.text_field :email, class: "form-control" %>
              </div>

              <div class="mb-3">
                <%= f.label :role, class: "form-label" %>
                <%= f.select(:role, User.roles.keys.map { |w| [w.humanize, w] }, {}, class: "form-select") %>
              </div>

              <%= f.submit "Update", class: "btn btn-primary" %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
