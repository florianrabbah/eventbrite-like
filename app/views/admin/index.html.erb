<h1 class="text-center">Admin Page</h1>

<% @users.each do |user| %>
  <%= form_for(user, url: admin_user_path(user), remote: true, method: :patch) do |f| %>
    <p>
      <%= f.text_field :email %>
      <%= f.select(:role, User.roles.keys.map { |w| [w.humanize, w] }) %>
      <%= f.submit "Update" %>
    </p>
  <% end %>
<% end %>
